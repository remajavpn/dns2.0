export red=$'\e[0;91m'
export green=$'\e[0;92m'
export white=$'\e[0;97m'
export cyan=$'\e[1;36m'
 
function banner {
printf "${cyan}
 ____ ____  _   _        ___  _   _
/ ___/ ___|| | | |___   / _ \| \ | |
\___ \___ \| |_| / __| | | | |  \| |
 ___) |__) |  _  \__ \ | |_| | |\  |
|____/____/|_| |_|___/  \___/|_| \_|
${red}By RneoX                                     
                            
"
}
 
 
while true
do
monitorar=$(ps x | grep "sshd:" | wc -l)
resultado=$(($monitorar-1))
banner
echo "${green}Usuarios Conectados: ${white}$resultado"
sleep 5s
clear
done
